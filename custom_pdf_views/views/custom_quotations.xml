        <template id="customisation_request_quotation" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="/t" position="replace">
                <t t-name="purchase.report_purchasequotation_document">
                    <t t-call="web.external_layout">
                        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                        <t t-set="forced_vat"
                           t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                        <t t-set="address">
                            <strong>Vendor Details:</strong>
                            <div t-field="o.partner_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;vat&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        </t>
                        <t t-if="o.dest_address_id">
                            <t t-set="information_block">
                                <strong>Shipping address:</strong>
                                <div t-field="o.dest_address_id"
                                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"
                                     name="purchase_shipping_address"/>
                            </t>
                        </t>
                        <t t-set="order_detail_block">
                            <div id="informations" class="mt-4 mb32">
                                <div t-if="o.user_id">
                                    <strong>Buyer:</strong>
                                    <p t-field="o.user_id" class="m-0"/>
                                </div>
                                <div t-if="o.partner_id">
                                    <strong>Vendor:</strong>
                                    <p t-field="o.partner_id" class="m-0"/>
                                </div>
                                <div t-if="o.partner_ref">
                                    <strong>Vendor Reference:</strong>
                                    <p t-field="o.partner_ref" class="m-0"/>
                                </div>
                            </div>
                        </t>
                        <div class="page">
                            <div class="oe_structure"/>

                            <h2 class="mt-4">Request for Quotation #
                                <span t-field="o.name"/>
                            </h2>


                            <table class="table table-sm o_main_table table-borderless mt-4">
                                <thead style="display: table-row-group">
                                    <tr>
                                        <th name="th_description">
                                            <strong>Description</strong>
                                        </th>
                                        <th name="th_expected_date" class="text-center">
                                            <strong>Expected Date</strong>
                                        </th>
                                        <th name="th_quantity" class="text-end">
                                            <strong>Quantity</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.order_line" t-as="order_line">
                                        <tr>
                                            <t t-if="not order_line.display_type">
                                                <td id="product" class="text-center">
                                                    <span t-esc="order_line.clean_name" />
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="order_line.date_planned"/>
                                                </td>
                                                <td class="text-end">
                                                    <span t-field="order_line.product_qty"/>
                                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                                    <span t-if="order_line.product_packaging_id">
                                                        (
                                                        <span t-field="order_line.product_packaging_qty"
                                                              t-options="{&quot;widget&quot;: &quot;integer&quot;}"/>
                                                        <span t-field="order_line.product_packaging_id"/>)
                                                    </span>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td colspan="99" id="section">
                                                    <span t-field="order_line.name"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <p t-field="o.notes" class="mt-4"/>

                            <div class="oe_structure"/>
                        </div>
                        <div class="page" name="testing" style="page-break-before: always;">
                            <span>
                                <strong>PAYMENT TERMS:</strong>
                                A 50% deposit is required to put orders into production. Balance payment in full is
                                required
                                prior to dispatch of order
                            </span>
                            <div/>
                            <br/>
                            <span>Please use the correct quote or invoice number as the payment Reference Number so that
                                we can
                                allocate your payment to the correct order.
                            </span>
                            <div/>
                            <span>Please send proof of payment to <a href="mailto:admin@pedersenlennard.co.za">
                                admin@pedersenlennard.co.za
                            </a> .
                            </span>
                            <div/>
                            <br/>
                            <span>
                                <strong>BANK DETAILS:</strong>
                            </span>
                            <span style="color: red;">Capitec Business / Acc: 1050 677838 / Branch No: 450105 / Swift
                                Code:
                                CABLZAJJ / Reference:
                                Quote or Invoice number
                            </span>
                            <div/>
                            <br/>
                            <span><strong>LEAD TIME:</strong>Kindly note our current lead times:
                            </span>
                            <div/>
                            <span>- Homeware and accessories: 5 weeks.</span>
                            <div/>
                            <span>- Furniture items: 6 weeks</span>
                            <div/>
                            <span>A delivery date will be confirmed closer to completion.</span>
                            <div/>
                            <br/>
                            <span>TERMS AND CONDITIONS:</span>
                            <div/>
                            <span>The purchase of the product/s from Pedersen + Lennard is subject to the terms and
                                conditions
                                of sale as contained on the website, http://pedersenlennard.co.za/about/faqs/.
                                A copy can also be requested by you in-store or on email and will be provided upon such
                                express
                                request. By purchasing this product/s you confirm your unconditional
                                acceptance of the terms and conditions of sale.
                            </span>
                            <div/>
                            <br/>
                            <span>IMPORTANT TO NOTE:</span>
                            <div/>
                            <span>Timber is a natural product and is affected by change in humidity, such as air-conditioning, and/or extreme
                                temperatures which can cause timber to crack and cause damage that is out of our control.
                                Please take note of our care instructions and action accordingly, as failure to do so may void warranty.
                                When using air-conditioner, we encourage humidifiers as a preventative measure.
                            </span>
                            <div />
                            <span>
                                If unsure, please contact us and we’ll gladly assist.
                            </span>
                        </div>
                    </t>
                </t>
            </xpath>
        </template>

        <template id="customisation_purchase_order" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="/t" position="replace">
                <t t-name="purchase.report_purchaseorder_document">
                    <t t-call="web.external_layout">
                        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                        <t t-set="address">
                            <strong>Vendor Details:</strong>
                            <div t-field="o.partner_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;vat&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        </t>
                        <t t-if="o.dest_address_id">
                            <t t-set="information_block">
                                <strong>Shipping address:</strong>
                                <div t-if="o.dest_address_id">
